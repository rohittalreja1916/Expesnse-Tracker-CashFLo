<%= render partial: 'shared/heading', locals: { heading: "#{ action_name.capitalize } User Category" } %>

<%= form_with model: [user_category] do |form| %>

  <%= render partial: 'shared/errors', locals: { resource: user_category } %>

  <div class="row">
    <div class="col-md-4 mb-4">
      <%= form.label :name, class:"form-label" %>
      <%= form.text_field :name, autofocus: true, class: "form-control form-control-lg" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 mb-4">
      <%= form.label :background, "Background Image", class: 'form-label' %>
      <%= form.file_field :background %>
    </div>
  </div>

  <%= form.submit class: "btn btn-success btn-lg shadow" %>
  <%= link_to "Cancel", user_categories_path, class: 'btn btn-danger btn-lg shadow' %>
<% end %>
