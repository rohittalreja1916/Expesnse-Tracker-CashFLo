<header>
  <nav class="d-lg-block sidebar collapse bg-white">
    <div class="position-sticky">
      <div class="list-group list-group-flush mx-3 mt-4">
        <div class="list-group-item list-group-item-action py-2">
          <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Categories
            </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <li>
                  <div class="d-flex justify-content-center">
                    <%= link_to new_user_category_path, class:"btn btn-success rounded-circle shadow-lg" do %>
                      <i class="fas fa-plus"></i>
                    <% end  %>
                  </div>
                </li>
                <% user_categories.each do |category| %>
                   <% unless category.id.nil? %>
                    <li>
                      <%= link_to "#{category.name}", user_category_path(category), class:"dropdown-item" %>
                    </li>
                  <% end%>
                <% end %>
              </ul>
            </div>
          </div>
          <%= link_to "User Categories", user_categories_path, class:"list-group-item list-group-item-action py-2 ripple" %>
        </div>
      </div>
    </div>
  </nav>

  <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    <%= link_to home_index_path do %>
      <%= image_tag t('project.logo.file_name'), height: 25, alt:"Company Logo", loading:"lazy", class:'navbar-brand' %>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Categories
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <div class="d-flex justify-content-center">
              <%= link_to new_user_category_path, class:"btn btn-success rounded-circle shadow-lg" do %>
                <i class="fas fa-plus"></i>
              <% end  %>
            </div>
            <div class="dropdown-divider"></div>
            <% user_categories.each do |category| %>
                <% unless category.id.nil? %>
                <%= link_to "#{category.name}", user_category_path(category), class:"dropdown-item" %>
              <% end%>
            <% end %>
          </div>
        </li>
      </ul>
      <ul class="navbar-nav ml-auto mr-5">
        <form class="form-inline my-2 my-lg-0 mr-sm-5">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle hidden-arrow d-flex align-items-center" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-expanded="false" aria-haspopup="true">
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar, class:'rounded-circle', height:'22', alt:'Avatar', loading:'lazy' %>
            <% else %>
              <img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img (31).webp" class="rounded-circle" height="22" alt="Avatar" loading="lazy" />
            <% end %>
          </a>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
            <li> 
              <%= link_to t("links.profile"), edit_user_registration_path, class:'dropdown-item' %>
            </li>
            <li>
              <%= button_to t("links.sign_out"), destroy_user_session_path, data: { "turbo-method": :delete }, class:"dropdown-item" ,method: :delete %>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
<!--Main layout-->
<main style="margin-top: 58px;">
  <div class="container pt-4">
    <%= yield %>
  </div>
</main>
<!--Main layout-->

