<nav class="d-lg-block sidebar collapse bg-white">
  <%= link_to home_index_path do %>
    <%= image_tag t('project.logo.file_name'), height: 25, alt:"Company Logo", loading:"lazy", class:'navbar-brand' %>
  <% end %>
    <div class="list-group list-group-flush mx-3 mt-4">
      <div class="list-group-item list-group-item-action py-2">
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Categories
          </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <li>
                <div class="d-flex justify-content-center">
                  <%= link_to new_user_category_path, class:"btn btn-success rounded-circle shadow-lg" do %>
                    <i class="fas fa-plus"></i>
                  <% end  %>
                </div>
              </li>
              <% user_categories.each do |category| %>
                  <% unless category.id.nil? %>
                  <li>
                    <%= link_to "#{category.name}", user_category_path(category), class:"dropdown-item" %>
                  </li>
                <% end%>
              <% end %>
            </ul>
          </div>
        </div>
        <%= link_to "User Categories", user_categories_path, class:"list-group-item list-group-item-action py-2 ripple" %>
      </div>
    </div>
</nav>
<!--Main layout-->
<main>
  <div class="container pt-4">
    <%= yield %>
  </div>
</main>
